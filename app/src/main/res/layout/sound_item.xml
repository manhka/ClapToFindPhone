<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginVertical="16dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/custom_sound_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sound_active"
        android:padding="18dp"
        android:src="@drawable/cat_meowing_ic"
        android:foreground="@drawable/my_ripple"
        />

    <TextView
        android:id="@+id/txt_sound_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_meowing"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:maxLines="2"
        android:paddingHorizontal="5dp"
        />
</LinearLayout>