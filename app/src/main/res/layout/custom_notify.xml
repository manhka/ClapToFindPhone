<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <ImageView
       android:id="@+id/clap_btn_notification"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/clap_notify"
       />
   <ImageView
       android:id="@+id/voice_passcode_btn_notification"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/voice_passcode_notify"
       android:layout_marginStart="20dp"
       />
   <ImageView
       android:id="@+id/touch_phone_btn_notification"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/touch_phone_notify"
       android:layout_marginStart="20dp"/>
   <ImageView
       android:id="@+id/pocket_mode_btn_notification"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/pocket_mode_notify"
       android:layout_marginStart="20dp"/>
</LinearLayout>