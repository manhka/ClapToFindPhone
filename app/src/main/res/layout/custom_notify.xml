<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="5dp">

   <ImageView
       android:id="@+id/imgView_clap_noti"
       android:layout_width="25dp"
       android:layout_height="25dp"
       android:src="@drawable/clap_noti_ic"
       />
    <TextView
        android:id="@+id/txt_clap_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clap"
        android:textColor="@color/black"
        android:layout_below="@id/imgView_clap_noti"
        />

    <TextView
        android:id="@+id/txt_voice_passcode_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice..."
        android:textColor="@color/black"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_clap_noti"
        android:layout_marginStart="30dp"/>
    <ImageView
        android:id="@+id/imgView_voice_passcode_noti"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/voice_noti_ic"
        android:layout_toEndOf="@id/imgView_clap_noti"
        android:layout_marginStart="36dp"
        />
    <ImageView
        android:id="@+id/imgView_touch_phone_noti"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/touch_phone_noti_ic"
        android:layout_toEndOf="@id/txt_voice_passcode_noti"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txt_touch_phone_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't t..."
        android:textColor="@color/black"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_voice_passcode_noti"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/imgView_pocket_mode_noti"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/touch_phone_noti_ic"
        android:layout_toEndOf="@id/txt_touch_phone_noti"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/txt_pocket_mode_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pocket..."
        android:textColor="@color/black"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_touch_phone_noti"
        android:layout_marginStart="20dp"/>
</RelativeLayout>