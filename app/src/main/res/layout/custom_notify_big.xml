<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
   >

   <ImageView
       android:id="@+id/imgView_clap_noti"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/clap_noti_ic"
       />
    <TextView
        android:id="@+id/txt_clap_noti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/noti_clap"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_below="@id/imgView_clap_noti"
        />

    <TextView
        android:id="@+id/txt_voice_passcode_noti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/noti_voice"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_clap_noti"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/imgView_voice_passcode_noti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/voice_noti_ic"
        android:layout_toEndOf="@id/imgView_clap_noti"
        android:layout_marginStart="25dp"
        />
    <ImageView
        android:id="@+id/imgView_touch_phone_noti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/touch_phone_noti_ic"
        android:layout_toEndOf="@id/txt_voice_passcode_noti"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txt_touch_phone_noti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/noti_touch"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_voice_passcode_noti"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/imgView_pocket_mode_noti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pocket_mode_noti_ic"
        android:layout_toEndOf="@id/txt_touch_phone_noti"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txt_pocket_mode_noti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/noti_pocket_mode"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_touch_phone_noti"
        android:layout_marginStart="10dp"/>
 <ImageView
        android:id="@+id/imgView_charger_alarm_noti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/charger_alarm_noti_ic"
        android:layout_toEndOf="@id/txt_pocket_mode_noti"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txt_charger_alarm_noti"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="@string/noti_charger_alarm"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_below="@id/imgView_clap_noti"
        android:layout_toEndOf="@id/txt_pocket_mode_noti"
        android:layout_marginStart="10dp"/>
</RelativeLayout>