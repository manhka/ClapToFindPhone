<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_noti_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:text="@string/where_is_your_phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_noti_hand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/hand_noti_ic" />

        <TextView
            android:id="@+id/txt_noti_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/clap_tool_will_help_you_find"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>