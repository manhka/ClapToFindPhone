<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_active_item"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:id="@+id/flashlightBg"
    android:foreground="@drawable/my_ripple"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/txt_flashlight_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="@string/default_flash"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="5dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                />


            <ImageView
                android:id="@+id/selected_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tick_ic"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/premium_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_premium"
                android:padding="5dp"
                android:visibility="visible"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

